[misc]
bar-sizes = 15

[colors]
background = #2b363a
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555

[bar/mainbar]
monitor = ${env:MONITOR:}
bottom = true
width = 100%
height = 30
background = ${colors.background}
foreground = ${colors.foreground}

tray-position = right
tray-padding = 2

font-0 = FiraCode Nerd Font Mono:style=Medium,Regular;2
font-1 = Twemoji:style=Regular:pixelsize=1
font-2 = siji:pixelsize=10;1
module-margin-left = 1
module-margin-right = 2

modules-left = workspace layout
modules-right = battery pulseaudio xbacklight date

;;;;;;;;;;; MODULES ;;;;;;;;;;;;;;;;
[module/date]
type = internal/date
interval = 15.0
date = %d %h %Y / %H:%M

[module/xbacklight]
type = internal/xbacklight
format = <bar> <label>
label = 盛

bar-width = ${misc.bar-sizes}
bar-indicator = ""
bar-indicator-foreground = ${colors.foreground-alt}
bar-fill = " "
bar-fill-background = #9f78e1
bar-empty = " "
bar-empty-background = ${colors.foreground-alt}

[module/workspace]
type = custom/script
exec = leftwm-state -w $index -t "$SCRIPTPATH/liquid/workspace.liquid"
tail = true

[module/layout]
type = custom/script
exec = leftwm-state -w $index -t "$SCRIPTPATH/liquid/layout.liquid"
tail = true

scroll-up = leftwm-command FocusPreviousTag
scroll-down = leftwm-command FocusNextTag

[module/pulseaudio]
type = internal/pulseaudio
; sink = alsa_output.pci-0000_12_00.3.analog-stereo
use-ui-max = true
; Interval for volume increase/decrease (in percent points)
interval = 5

format-volume = <bar-volume> <ramp-volume>
format-muted = <bar-volume> <label-muted>

label-muted = 婢
label-muted-foreground = ${colors.foreground-alt}

click-right = pavucontrol

ramp-volume-0 = 奄
ramp-volume-1 = 奔
ramp-volume-2 = 墳

bar-volume-width = ${misc.bar-sizes}
bar-volume-indicator = ""
bar-volume-indicator-foreground = ${colors.foreground-alt}
bar-volume-fill = " "
bar-volume-fill-background = #FE5B50
bar-volume-empty = " "
bar-volume-empty-background = ${colors.foreground-alt}

[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = ADP1
poll-interval = 5
time-format = %H:%M

format-charging =  <label-charging>
format-discharging = <ramp-capacity> <label-discharging>

label-charging = %percentage%%
label-discharging = %percentage%%
label-full = 

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
